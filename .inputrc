set editing-mode vi

# Display vi mode before prompt
set show-mode-in-prompt on

# The \1 and \2 escape codes delimit sequences of  non-printed characters and
# are required for terminal control sequences within the prompts
set vi-ins-mode-string "\1\e[1;32m\2i:\1\e[0m\2"
set vi-cmd-mode-string "\1\e[1;33m\2n:\1\e[0m\2"

